<% layout('/layouts/boilerplate') %>
    <h1>Campgrounds</h1>
    <a href="campgrounds/new">Add campground</a>

        <% for (let camp of campgrounds) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%= camp.image %>" class="img-fluid" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"> <%= camp.title %> </h5>
                            <p class="card-text"> <%= camp.description %> </p>
                            <p class="card-text"> 
                                <small class="text-body-secondary"> <%= camp.location %></small>
                            </p>
                            <a class="btn btn-primary" href="/campgrounds/<%= camp.id %>" role="button">View <%= camp.title %></a>
                        </div>
                    </div>
                </div>
            </div>

            <% } %>
